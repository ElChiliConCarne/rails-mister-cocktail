<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.pexels.com/photos/4686952/pexels-photo-4686952.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <div class="container">
    <h1>Les m√©langes de BERTHOD</h1>
    <p>Imagine, Get inspired, Enjoy!</p>
    <%= link_to "Create a Cocktail", new_cocktail_path, class: "btn btn-light float-right" %>
  </div>
</div>
<div class="container mt-3 mb-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <%# <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://images.pexels.com/photos/5041570/pexels-photo-5041570.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260);"> %>
        <% if cocktail.photo.attached? %>
          <% background_image_url = cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <% background_image_url = 'https://images.pexels.com/photos/5041570/pexels-photo-5041570.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260' %>
        <% end %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= background_image_url %>');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(id: cocktail.id), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>


