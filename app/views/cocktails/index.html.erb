<div class="container mt-3">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <% background_url = cl_image_path cocktail.photo.key, width: 400, height: 500, crop: :fill %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= background_url %>');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(id: cocktail.id), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to '+ add a cocktail', new_cocktail_path, class: "btn btn-primary"%>

</div>


